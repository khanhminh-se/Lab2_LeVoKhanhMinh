@model IEnumerable<Lab2_LeVoKhanhMinh.Models.User>

@{
    ViewBag.Title = "User Management";
    Layout = "_Layout";
}

<h1>User Management</h1>

<div class="container">
    <div class="row mb-3">
        <div class="col-md-6">
            <a href="@Url.Action("Create")" class="btn btn-success">Add New User</a>
        </div>
    </div>

    <div class="row">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = user.Id })" class="btn btn-primary">Edit</a>
                        <form method="post" action="@Url.Action("Delete", new { id = user.Id })" style="display:inline;">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>