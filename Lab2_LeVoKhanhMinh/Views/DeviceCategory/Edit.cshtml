@model DeviceCategory

@{
    ViewBag.Title = "title";
    Layout = "_LayoutForAdmin";
}

<div class="container">
    <h1>Edit Device Category</h1>
    <form asp-controler="DeviceCategory" asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="mt-3">
            <div class="mb-1">
                <label class="form-label"> Category Id : </label>
                <input type="text" value="@Model.Id" readonly class="form-control" id="deviceId" name="Id"/>
            </div>
            <div class="mb-1">
                <label class="form-label"> Category Title : </label>
                <input type="text" class="form-control" id="categoryTitle" name="CategoryTitle" value="@Model.CategoryTitle"/>
            </div>
            <div class="mb-3">
                @if (!string.IsNullOrEmpty(@Model.imageUrl))
                {
                    <img src="/@Url.Content(Model.imageUrl)" alt="@Model.CategoryTitle" id="show-image"/>
                }
                else
                {
                    <p>No image found</p>
                    
                }
            </div>
            <div class="mb-3">
                <label for="imageFile" class="form-label">Category Image</label>
                <input class="form-control" id="imageFile" onchange="getFile()" type="file" name="ImageFile">
            </div>
            <div class="mb-3">
                <button class="btn  btn-primary" type="submit">Save</button>
            </div>
        </div>
    </form>
</div>
