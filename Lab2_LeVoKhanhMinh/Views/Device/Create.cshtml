

@{
    ViewBag.Title = "title";
    Layout = "_LayoutForAdmin";
}
@model Device

<div class="container">
    <h1>Add Device</h1>
    <form  asp-controler="Device" asp-action="Create" method="post">
        <div class="mt-3">
            <div class="mb-1">
                <label class="form-label">Device Name</label>
                <input type="text" asp-for="DeviceName" class="form-control" id="deviceName" name="DeviceName" />
            </div>
            <div class="mb-1">
                <label class="form-label"> Device Code </label>
                <input type="text" asp-for="DeviceCode" class="form-control" id="deviceCode" name="DeviceCode" />
            </div>
            <div class="mb-1">
                <label class="form-label">Device Category </label>
                <select class="form-select"  asp-for="DeviceCategoryId">
                    <option selected>Open this select category</option>
                    @foreach (var category in ViewBag.categories)
                    {
                        <option value="@category.Id">@category.CategoryTitle</option>
                    }
                </select>
            </div>
            <div class="mb-1">
                <label class="form-label" asp-for="Status">Status: </label>
                <select class="form-select">
                    <option selected>Open this select Status</option>
                    @foreach (var status in ViewBag.Statuses as List<Status>)
                    {
                        <option value="@status">@status</option>
                    }
                </select>
            </div>
            <div class="mb-1" >
                <label class="form-label">Date Of Entry</label>
                <input type="date" asp-for="DateOfEntry" class="form-control" id="deviceDateOfEntry" name="DateOfEntry" />
            </div>
            <div class="mb-3">
                <button  class="btn  btn-primary"  type="submit">Add</button>
            </div>
        </div>
    </form>
</div>
